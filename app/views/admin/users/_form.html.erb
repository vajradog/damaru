<div class="content-wrapper">
  <section class="content-header">
    <h1>
     <%= @user.new_record? ? "Register User" : "Update Profile" %>
    </h1>
  </section>

  <section class="content">
    <div class="row">
      <section class="col-md-6">

        <div class="box box-info">

          <div class="box-header with-border">
            <h3 class="box-title">Create a New User</h3>
              <%= render 'layouts/errors', object: @user %>
          </div>

          <div class="box-body form-horizontal" >

            <%= form_for [:admin, @user]  do |f|  %>
            <div class="form-group">
              <%= f.label :display_name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :display_name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
                <%= f.label :email, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                 <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, @user.new_record? ? "Password" : "New Password (leave blank to use same password)", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                  <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

            <% if current_user.admin? %>
            <div class="form-group">
            <label class="col-sm-2 control-label">Role</label>
              <div class="col-sm-10">
                <%= f.select :role, options_for_select([["Admin", "admin"], ["Editor", "editor"], ["Author", "author"], ["Contributor", "contributor"]], @user.role), include_blank: true, class: "form-control" %>
              </div>
            </div>
            <% end %>

          </div>

            <div class="box-footer">
              <%= f.submit @user.new_record? ? "Create User" : "Update Profile" , class: 'btn btn-info'%>
            </div>
            <% end %>
        </div>
      </section>
    </div>
  </section>
</div>
